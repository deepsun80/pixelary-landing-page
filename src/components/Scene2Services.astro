<section class="scene scene-2" id="scene-2">
  <!-- Single diamond that will fade in first -->
  <div class="diamond-single" id="diamond-single"></div>

  <!-- Three diamonds container -->
  <div class="diamonds-container" id="diamonds-container">
    <!-- Diamond 1: The Foundation -->
    <div class="diamond diamond-1" id="diamond-1">
      <div class="diamond-border"></div>
      <div class="diamond-content" id="diamond-content-1">
        <div class="icon-circle icon-circle-1">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
        </div>
        <h3>Web Design & SEO</h3>
        <p>
          Stop losing customers to slow templates. We engineer custom digital
          experiences designed to rank high and convert visitors into leads.
        </p>
      </div>
    </div>

    <!-- Diamond 2: The Signal -->
    <div class="diamond diamond-2" id="diamond-2">
      <div class="diamond-border"></div>
      <div class="diamond-content" id="diamond-content-2">
        <div class="icon-circle icon-circle-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <h3>Intelligent Capture</h3>
        <p>
          Your business should never sleep. We implement 'Always-On' technology
          that secures leads the moment they express interest.
        </p>
      </div>
    </div>

    <!-- Diamond 3: The Growth -->
    <div class="diamond diamond-3" id="diamond-3">
      <div class="diamond-border"></div>
      <div class="diamond-content" id="diamond-content-3">
        <div class="icon-circle icon-circle-3">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"
            ></polygon>
          </svg>
        </div>
        <h3>Client Retention</h3>
        <p>
          We don't just find customers; we keep them. Our systems automatically
          re-engage past leads and drive repeat business.
        </p>
      </div>
    </div>
  </div>
</section>

<style is:global>
  .scene-2 {
    background-color: #f5f5f5;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  /* Single diamond (appears first) */
  .diamond-single {
    position: absolute;
    width: 300px;
    height: 300px;
    transform: rotate(45deg);
    opacity: 0;
    background: linear-gradient(135deg, #f9bc09, #1aaa62);
    padding: 20px;
    border-radius: 20px;
  }

  .diamond-single::after {
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    background: #ffffff;
    border-radius: 10px;
  }

  /* Three diamonds container */
  .diamonds-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    opacity: 0;
  }

  /* Individual diamond */
  .diamond {
    width: 350px;
    height: 350px;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Diamond border element */
  .diamond-border {
    position: absolute;
    width: 300px;
    height: 300px;
    transform: rotate(45deg);
    padding: 20px;
    border-radius: 20px;
  }

  .diamond-1 .diamond-border {
    background: linear-gradient(135deg, #f54335, #f5930a);
  }

  .diamond-2 .diamond-border {
    background: linear-gradient(135deg, #f9bc09, #1aaa62);
  }

  .diamond-3 .diamond-border {
    background: linear-gradient(135deg, #179f9d, #4918b2);
  }

  .diamond-border::after {
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    background: #ffffff;
    border-radius: 10px;
  }

  /* Diamond content */
  .diamond-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 20px;
    max-width: 180px;
    opacity: 0;
  }

  .icon-circle {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto 12px;
    color: #ffffff;
  }

  .icon-circle-1 {
    background-color: #f5930a;
  }

  .icon-circle-2 {
    background-color: #1aaa62;
  }

  .icon-circle-3 {
    background-color: #179f9d;
  }

  .diamond-content h3 {
    font-family: 'Poppins', sans-serif;
    font-size: 18px;
    font-weight: 600;
    color: #2d2d2d;
    margin-bottom: 8px;
  }

  .diamond-content p {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #2d2d2d;
    line-height: 1.4;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .diamonds-container {
      flex-direction: column;
    }

    .diamond {
      width: 280px;
      height: 280px;
    }

    .diamond-single {
      width: 250px;
      height: 250px;
    }

    .diamond-border {
      width: 250px;
      height: 250px;
    }

    .diamond-content {
      max-width: 150px;
    }

    .diamond-content h3 {
      font-size: 17px;
    }

    .diamond-content p {
      font-size: 12px;
    }
  }
</style>
